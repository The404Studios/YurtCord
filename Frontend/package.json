    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@microsoft/signalr": "^7.0.14",
    "@reduxjs/toolkit": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.21.1",
    "axios": "^1.6.5",
    "date-fns": "^3.0.6",
    "emoji-mart": "^5.5.2",
    "framer-motion": "^10.18.0",
    "react-markdown": "^9.0.1",
    "react-dropzone": "^14.2.3",
    "react-hot-toast": "^2.4.1",
    "zustand": "^4.4.7",
    "clsx": "^2.1.0",
    "react-icons": "^5.0.1"
